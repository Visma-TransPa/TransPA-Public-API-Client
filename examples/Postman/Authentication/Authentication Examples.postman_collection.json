				{
					"name": "Alive call - verifies general access to the API",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "https://api.mytranspa.com/publicApi/v1/alive",
